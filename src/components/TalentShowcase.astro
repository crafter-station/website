---
interface Talent {
  name: string;
  role: string;
  achievement: string;
  photoUrl?: string;
  linkedin?: string;
  portfolio?: string;
  interviewUrl?: string;
}

// Temporary mock data - will be replaced with real interviews
const talents: Talent[] = [
  // Add interviewed talents here as they come in
];
---

<div class="mt-8">
  <div
    class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 text-foreground/80 font-medium px-1 py-3 border-border/75 border-b mb-6"
  >
    <div class="flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
        <circle cx="9" cy="7" r="4"></circle>
        <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
      </svg>
      <h2 class="capitalize text-foreground/80 font-normal">
        Featured Talents
      </h2>
    </div>
    <a
      href="/talents"
      class="text-xs sm:text-sm text-muted-foreground hover:text-foreground transition-colors flex items-center gap-1.5 hover:underline"
    >
      <span>View all talents</span>
      <svg
        width="12"
        height="12"
        viewBox="0 0 15 15"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M8.14645 3.14645C8.34171 2.95118 8.65829 2.95118 8.85355 3.14645L12.8536 7.14645C13.0488 7.34171 13.0488 7.65829 12.8536 7.85355L8.85355 11.8536C8.65829 12.0488 8.34171 12.0488 8.14645 11.8536C7.95118 11.6583 7.95118 11.3417 8.14645 11.1464L11.2929 8H2.5C2.22386 8 2 7.77614 2 7.5C2 7.22386 2.22386 7 2.5 7H11.2929L8.14645 3.85355C7.95118 3.65829 7.95118 3.34171 8.14645 3.14645Z"
          fill="currentColor"
          fill-rule="evenodd"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  {
    talents.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {talents.map((talent) => (
          <div class="group relative bg-muted/50 rounded-xl border border-border/50 p-5 hover:border-border transition-all hover:shadow-lg">
            <div class="flex items-start gap-4">
              {talent.photoUrl ? (
                <div class="w-16 h-16 rounded-lg overflow-hidden flex-shrink-0 bg-neutral-200 dark:bg-neutral-800">
                  <img
                    src={talent.photoUrl}
                    alt={talent.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
              ) : (
                <div class="w-16 h-16 rounded-lg flex-shrink-0 bg-neutral-200 dark:bg-neutral-800 flex items-center justify-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-foreground/40"
                  >
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" />
                    <circle cx="12" cy="7" r="4" />
                  </svg>
                </div>
              )}
              <div class="flex-1 min-w-0">
                <h3 class="font-semibold text-foreground text-base">
                  {talent.name}
                </h3>
                <p class="text-sm text-foreground/60 mt-0.5">{talent.role}</p>
              </div>
            </div>
            <p class="mt-3 text-sm text-foreground/70 leading-relaxed line-clamp-3">
              {talent.achievement}
            </p>
            <div class="mt-4 flex items-center gap-2">
              {talent.interviewUrl && (
                <a
                  href={talent.interviewUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-xs font-medium text-foreground/80 hover:text-foreground transition-colors underline"
                >
                  Watch Interview
                </a>
              )}
              {talent.linkedin && (
                <a
                  href={talent.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-muted-foreground hover:text-foreground transition-colors"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
              )}
              {talent.portfolio && (
                <a
                  href={talent.portfolio}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-muted-foreground hover:text-foreground transition-colors"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <circle cx="12" cy="12" r="10" />
                    <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20" />
                    <path d="M2 12h20" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="bg-muted/30 rounded-xl border border-dashed border-border/50 p-12 text-center">
        <div class="flex flex-col items-center gap-4">
          <div class="w-16 h-16 rounded-full bg-muted flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-foreground/40"
            >
              <circle cx="12" cy="8" r="5" />
              <path d="M20 21a8 8 0 0 0-16 0" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-medium text-foreground/80 mb-1">
              Connecting with Peru's tech talent
            </h3>
            <p class="text-sm text-foreground/60 max-w-lg mx-auto mb-4">
              We're interviewing tech professionals from Peru to showcase our
              country's talent. First interviews coming soon.
            </p>
            <a
              href="https://forms.gle/83MvyWf5J4V6jqGk7"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-foreground bg-muted hover:bg-muted/80 rounded-lg transition-all border border-border/50"
            >
              <span>Apply to be interviewed</span>
              <svg
                width="14"
                height="14"
                viewBox="0 0 15 15"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M8.14645 3.14645C8.34171 2.95118 8.65829 2.95118 8.85355 3.14645L12.8536 7.14645C13.0488 7.34171 13.0488 7.65829 12.8536 7.85355L8.85355 11.8536C8.65829 12.0488 8.34171 12.0488 8.14645 11.8536C7.95118 11.6583 7.95118 11.3417 8.14645 11.1464L11.2929 8H2.5C2.22386 8 2 7.77614 2 7.5C2 7.22386 2.22386 7 2.5 7H11.2929L8.14645 3.85355C7.95118 3.65829 7.95118 3.34171 8.14645 3.14645Z"
                  fill="currentColor"
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                />
              </svg>
            </a>
          </div>
        </div>
      </div>
    )
  }
</div>
