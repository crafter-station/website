---
interface Project {
  name: string;
  description: string;
  status: "In Progress" | "Active" | "Coming Soon";
  href: string;
  target: "_blank" | "_self";
}

const projects: Project[] = [
  {
    name: "text0",
    description: "Absurdly smart (and personal) autocomplete",
    status: "Active",
    href: "https://text0.dev",
    target: "_blank",
  },
  {
    name: "tinte",
    description: "Theme generator (VSCode, shadcn/ui)",
    status: "Active",
    href: "https://tinte.dev",
    target: "_blank",
  },
  {
    name: "crafter-ui",
    description: "shadcn/ui registry",
    status: "Coming Soon",
    href: "https://crafter-ui.vercel.app",
    target: "_blank",
  },
];
---

<div class="text-sm !mb-4">
  <div class="bg-muted rounded-2xl border border-border/50 backdrop-blur-sm">
    <div class="px-6 py-8 flex flex-col">
      <div
        class="flex bg-primary/10 flex-col gap-2 p-3 sm:p-4 rounded-xl border border-border/50"
      >
        <div class="text-sm text-foreground">üèÜ Highlight</div>
        <p class="text-sm text-foreground/80 leading-relaxed">
          We proudly won the <a
            href="https://next-hackathon-2025.vercel.app/"
            class="underline font-semibold hover:text-foreground/90"
            target="_blank">Next.js Global Hackathon 2025</a
          > with <a
            href="https://text0.dev"
            class="underline font-semibold hover:text-foreground/90"
            target="_blank">text0</a
          > ‚Äî an absurdly smart and personal autocomplete.
        </p>
      </div>
      <div class="flex flex-col items-center text-center mt-7 mb-1">
        <p
          class="text-sm text-foreground/70 mb-3.5 max-w-md mx-auto tracking-[-0.01em]"
        >
          We're just getting started. Help shape the future of how developers
          build.
        </p>
        <a
          href="https://discord.gg/7MfrzBAX"
          target="_blank"
          rel="noopener noreferrer"
          class="group relative inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-b from-white/10 to-transparent text-[15px] font-medium text-white/95 rounded-xl transition-all duration-300 hover:shadow-[0_0_2rem_0_rgba(88,101,242,0.3)] hover:scale-[1.02] hover:text-white focus:outline-none focus:ring-2 focus:ring-[#5865F2]/50 focus:ring-offset-2 focus:ring-offset-black"
          style="background-color: #5865F2;"
        >
          <div
            class="absolute inset-0 rounded-xl bg-gradient-to-b from-white/10 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
          >
          </div>
          <svg
            class="w-5 h-5 transition-transform duration-300 group-hover:scale-110 opacity-90 group-hover:opacity-100"
            fill="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994.021-.041.001-.09-.041-.106a13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.118.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
            ></path>
          </svg>
          <span class="relative">Join Crafter Station</span>
        </a>
      </div>
    </div>
  </div>

  <div
    class="mt-8 flex items-start sm:items-center justify-between px-1 py-3 border-border/75 border-b gap-2 sm:gap-0"
  >
    <a href="/projects">
      <div
        class="flex flex-row items-center gap-2 text-foreground/80 font-medium"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-folder-dot-icon lucide-folder-dot"
        >
          <path
            d="M4 20h16a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.93a2 2 0 0 1-1.66-.9l-.82-1.2A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13c0 1.1.9 2 2 2Z"
          ></path>
          <circle cx="12" cy="13" r="1"></circle>
        </svg>
        <div>
          <h2 class="capitalize text-foreground/80 font-normal">Projects</h2>
        </div>
      </div>
    </a>

    <a
      class="flex text-muted-foreground hover:text-foreground/80 flex-row items-center gap-2 hover:underline font-medium"
      href="https://github.com/crafter-station"
      target="_blank"
    >
      <span class="hidden sm:block text-xs">Explore All Repos</span>
      <span class="block sm:hidden text-sm">All Repos</span>
      <svg
        width="15"
        height="15"
        viewBox="0 0 15 15"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="w-3.5 h-3.5"
      >
        <path
          d="M8.14645 3.14645C8.34171 2.95118 8.65829 2.95118 8.85355 3.14645L12.8536 7.14645C13.0488 7.34171 13.0488 7.65829 12.8536 7.85355L8.85355 11.8536C8.65829 12.0488 8.34171 12.0488 8.14645 11.8536C7.95118 11.6583 7.95118 11.3417 8.14645 11.1464L11.2929 8H2.5C2.22386 8 2 7.77614 2 7.5C2 7.22386 2.22386 7 2.5 7H11.2929L8.14645 3.85355C7.95118 3.65829 7.95118 3.34171 8.14645 3.14645Z"
          fill="currentColor"
          fill-rule="evenodd"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>

  <div class="flex flex-col mt-3 gap-1">
    {
      projects.map((project) => (
        <a
          class="flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-4 px-2 py-3 rounded-md hover:bg-muted dark:hover:bg-neutral-800/60 transition-colors font-light"
          href={project.href}
          target={project.target}
        >
          <div class="flex flex-col sm:flex-row items-start sm:items-center gap-1 sm:gap-2">
            <span class="text-sm font-medium text-foreground whitespace-normal sm:whitespace-nowrap">
              {project.name}
            </span>
            <span class="text-sm text-neutral-500 dark:text-neutral-400 whitespace-normal sm:whitespace-nowrap">
              {project.description}
            </span>
          </div>
          <div class="hidden sm:block flex-grow border-t border-border/50" />
          <span class="text-xs text-muted-foreground">{project.status}</span>
        </a>
      ))
    }
  </div>
</div>
