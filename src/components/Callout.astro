---
export interface Props {
  type?: "info" | "warning" | "success" | "error";
  title?: string;
  class?: string;
}

const { type = "info", title, class: className } = Astro.props;

const typeStyles = {
  info: "bg-blue-50 dark:bg-blue-950/20 border-blue-200/50 dark:border-blue-800/50",
  warning:
    "bg-amber-50 dark:bg-amber-950/20 border-amber-200/50 dark:border-amber-800/50",
  success:
    "bg-emerald-50 dark:bg-emerald-950/20 border-emerald-200/50 dark:border-emerald-800/50",
  error:
    "bg-red-50 dark:bg-red-950/20 border-red-200/50 dark:border-red-800/50",
};

const iconMap = {
  info: "ℹ️",
  warning: "⚠️",
  success: "✅",
  error: "❌",
};
---

<div
  class={`flex my-[1lh] flex-col gap-2 p-3 sm:p-4 rounded-xl border backdrop-blur-sm ${typeStyles[type]} ${className || ""}`}
>
  {
    title && (
      <div class="flex items-center gap-2">
        <span class="text-sm">{iconMap[type]}</span>
        <span class="text-sm font-medium text-foreground">{title}</span>
      </div>
    )
  }
  <div class="text-sm text-foreground/80 leading-relaxed">
    <slot />
  </div>
</div>
