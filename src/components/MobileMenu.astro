---
import CrafterIcon from "@/icons/crafter.svg";
import GithubIcon from "@/icons/github.svg";
import LinkedinIcon from "@/icons/linkedin.svg";
import XIcon from "@/icons/x.svg";

interface Props {
    currentPath?: string;
    isHomePage?: boolean;
}

const { currentPath = "/", isHomePage = false } = Astro.props;
---

<header class="lg:hidden fixed top-0 left-0 right-0 flex items-center justify-between px-4 py-3 bg-black/95 backdrop-blur-sm z-50 border-b border-neutral-900">
    <a href="/" class="flex items-center gap-2">
        <div class="p-1.5 border border-neutral-800">
            <CrafterIcon class="size-4 text-primary" />
        </div>
        <span class="text-sm text-white font-medium">Crafter Station</span>
    </a>
    <button
        id="mobile-menu-btn"
        type="button"
        class="p-2 text-neutral-400 hover:text-white transition-colors"
        aria-label="Toggle menu"
    >
        <svg id="menu-icon" class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="size-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
</header>

<div id="mobile-menu-panel" class="lg:hidden fixed inset-0 z-40 hidden">
    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm menu-backdrop" id="menu-backdrop"></div>
    <div class="menu-drawer absolute top-0 right-0 bottom-0 w-72 bg-neutral-950 border-l border-neutral-800 flex flex-col">
        <div class="flex items-center justify-between p-4 border-b border-neutral-800">
            <span class="text-sm text-neutral-500">Menu</span>
            <button id="close-menu-btn" class="p-1 text-neutral-400 hover:text-white transition-colors">
                <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <nav class="flex-1 p-4 overflow-y-auto">
            <div class="mb-6">
                <p class="text-xs text-neutral-500 uppercase tracking-wider mb-3">Navigate</p>
                {isHomePage ? (
                    <div class="flex flex-col gap-1">
                        <a href="#hero" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">Home</a>
                        <a href="#about" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">About</a>
                        <a href="#projects" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">Projects</a>
                        <a href="#team" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">Team</a>
                        <a href="#community" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">Community</a>
                        <a href="#blog" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">Blog</a>
                    </div>
                ) : (
                    <div class="flex flex-col gap-1">
                        <a href="/" class:list={["menu-link transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900", currentPath === "/" ? "text-primary" : "text-white hover:text-primary"]}>Home</a>
                        <a href="/#about" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">About</a>
                        <a href="/#projects" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">Projects</a>
                        <a href="/team" class:list={["menu-link transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900", currentPath.startsWith("/team") ? "text-primary" : "text-white hover:text-primary"]}>Team</a>
                        <a href="/#community" class="menu-link text-white hover:text-primary transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900">Community</a>
                        <a href="/blog" class:list={["menu-link transition-colors py-2 px-3 -mx-3 hover:bg-neutral-900", currentPath.startsWith("/blog") ? "text-primary" : "text-white hover:text-primary"]}>Blog</a>
                    </div>
                )}
            </div>

            <div class="mb-6">
                <p class="text-xs text-neutral-500 uppercase tracking-wider mb-3">Connect</p>
                <div class="flex items-center gap-2">
                    <a href="https://github.com/crafter-station" target="_blank" class="p-2.5 text-neutral-400 hover:text-white transition-colors border border-neutral-800 hover:border-neutral-700">
                        <GithubIcon class="size-4" />
                    </a>
                    <a href="https://x.com/CrafterStation" target="_blank" class="p-2.5 text-neutral-400 hover:text-white transition-colors border border-neutral-800 hover:border-neutral-700">
                        <XIcon class="size-4" />
                    </a>
                    <a href="https://linkedin.com/company/crafter-station" target="_blank" class="p-2.5 text-neutral-400 hover:text-white transition-colors border border-neutral-800 hover:border-neutral-700">
                        <LinkedinIcon class="size-4" />
                    </a>
                </div>
            </div>

            <div>
                <p class="text-xs text-neutral-500 uppercase tracking-wider mb-3">Join us</p>
                <div class="space-y-2">
                    <a href="https://wa.me/51987741971" target="_blank" class="flex items-center gap-3 p-3 bg-green-500/10 border border-green-500/30 hover:border-green-500 transition-colors">
                        <svg class="size-5 text-green-500 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        <div>
                            <p class="text-white text-sm font-medium">WhatsApp</p>
                            <p class="text-xs text-neutral-500">Chat with us</p>
                        </div>
                    </a>
                    <a href="https://discord.gg/QvsS4jNpKa" target="_blank" class="flex items-center gap-3 p-3 bg-[#5865F2]/10 border border-[#5865F2]/30 hover:border-[#5865F2] transition-colors">
                        <svg class="size-5 text-[#5865F2] shrink-0" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994.021-.041.001-.09-.041-.106a13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.118.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                        </svg>
                        <div>
                            <p class="text-white text-sm font-medium">Discord</p>
                            <p class="text-xs text-neutral-500">Join the community</p>
                        </div>
                    </a>
                </div>
            </div>
        </nav>
    </div>
</div>

<style>
    .menu-backdrop {
        animation: fadeIn 0.2s ease-out forwards;
    }
    .menu-backdrop.closing {
        animation: fadeOut 0.2s ease-in forwards;
    }
    .menu-drawer {
        animation: slideInRight 0.3s cubic-bezier(0.32, 0.72, 0, 1) forwards;
    }
    .menu-drawer.closing {
        animation: slideOutRight 0.2s ease-in forwards;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    @keyframes fadeOut {
        from { opacity: 1; }
        to { opacity: 0; }
    }
    @keyframes slideInRight {
        from { transform: translateX(100%); }
        to { transform: translateX(0); }
    }
    @keyframes slideOutRight {
        from { transform: translateX(0); }
        to { transform: translateX(100%); }
    }
</style>

<script>
    const menuBtn = document.getElementById('mobile-menu-btn');
    const closeMenuBtn = document.getElementById('close-menu-btn');
    const menuPanel = document.getElementById('mobile-menu-panel');
    const menuBackdrop = document.getElementById('menu-backdrop');
    const menuDrawer = menuPanel?.querySelector('.menu-drawer');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    function openMenu() {
        menuPanel?.classList.remove('hidden');
        menuBackdrop?.classList.remove('closing');
        menuDrawer?.classList.remove('closing');
        menuIcon?.classList.add('hidden');
        closeIcon?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
        menuBackdrop?.classList.add('closing');
        menuDrawer?.classList.add('closing');
        menuIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
        document.body.style.overflow = '';
        setTimeout(() => {
            menuPanel?.classList.add('hidden');
            menuBackdrop?.classList.remove('closing');
            menuDrawer?.classList.remove('closing');
        }, 200);
    }

    function toggleMenu() {
        const isHidden = menuPanel?.classList.contains('hidden');
        if (isHidden) {
            openMenu();
        } else {
            closeMenu();
        }
    }

    menuBtn?.addEventListener('click', toggleMenu);
    closeMenuBtn?.addEventListener('click', closeMenu);
    menuBackdrop?.addEventListener('click', closeMenu);

    menuPanel?.querySelectorAll('.menu-link').forEach(link => {
        link.addEventListener('click', closeMenu);
    });
</script>
