---
import SidebarLayout from "@/layouts/SidebarLayout.astro";
import { teamMembers } from "@/lib/constants/team";
import GithubIcon from "@/icons/github.svg";
import LinkedinIcon from "@/icons/linkedin.svg";
import XIcon from "@/icons/x.svg";

const member = teamMembers.find((m) => m.username === "railly")!;

const projects = [
  { name: "One Hunter Theme", desc: "VS Code theme with 200k+ installs", link: "https://marketplace.visualstudio.com/items?itemName=RaillyHugo.one-hunter" },
  { name: "tinte", desc: "VS Code themes generator", link: "https://tinte.railly.dev" },
];
---

<SidebarLayout
  title={`${member.name} | Crafter Station`}
  description={`${member.name} - ${member.position} at Crafter Station`}
>
  <div class="max-w-5xl pt-12 lg:pt-0 mx-auto">
    <a
      href="/team"
      class="inline-flex items-center gap-2 text-sm text-neutral-500 hover:text-white transition-colors mb-12"
    >
      <svg class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to team
    </a>

    <div class="relative mb-12">
      <div class="absolute -inset-4 bg-gradient-to-r from-violet-500/10 via-fuchsia-500/10 to-pink-500/10 blur-3xl -z-10"></div>

      <div class="flex flex-col sm:flex-row items-center sm:items-start gap-8">
        <div class="relative group">
          <div class="absolute inset-0 bg-gradient-to-br from-violet-500 to-fuchsia-500 blur-xl opacity-40 group-hover:opacity-60 transition-opacity"></div>
          <div class="relative w-32 h-32 overflow-hidden border border-violet-500/30">
            <img src={member.photoUrl} alt={member.name} class="w-full h-full object-cover" />
          </div>
        </div>

        <div class="text-center sm:text-left">
          <h1 class="text-4xl font-bold bg-gradient-to-r from-violet-400 via-fuchsia-400 to-pink-400 bg-clip-text text-transparent mb-2">
            {member.name}
          </h1>
          <p class="text-lg text-neutral-400 mb-4">{member.position}</p>

          <div class="flex justify-center sm:justify-start gap-2">
            {member.github && (
              <a href={member.github} target="_blank" class="p-2.5 border border-violet-500/30 bg-violet-500/10 text-violet-400 hover:bg-violet-500/20 transition-colors">
                <GithubIcon class="size-5" />
              </a>
            )}
            {member.x && (
              <a href={member.x} target="_blank" class="p-2.5 border border-fuchsia-500/30 bg-fuchsia-500/10 text-fuchsia-400 hover:bg-fuchsia-500/20 transition-colors">
                <XIcon class="size-5" />
              </a>
            )}
            {member.linkedin && (
              <a href={member.linkedin} target="_blank" class="p-2.5 border border-pink-500/30 bg-pink-500/10 text-pink-400 hover:bg-pink-500/20 transition-colors">
                <LinkedinIcon class="size-5" />
              </a>
            )}
            {member.website && (
              <a href={member.website} target="_blank" class="p-2.5 border border-violet-500/30 bg-violet-500/10 text-violet-400 hover:bg-violet-500/20 transition-colors">
                <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-10">
      <div class="p-6 border border-violet-500/20 bg-gradient-to-br from-violet-500/5 to-fuchsia-500/5">
        <h2 class="text-sm uppercase tracking-wider text-violet-400 mb-3">About</h2>
        <p class="text-neutral-300 leading-relaxed">
          Design Engineer obsessed with the intersection of design and code.
          Building tools that make developers' lives easier and more colorful.
        </p>
      </div>

      <div>
        <h2 class="text-sm uppercase tracking-wider text-fuchsia-400 mb-4">Featured Projects</h2>
        <div class="grid gap-3">
          {projects.map((project) => (
            <a
              href={project.link}
              target="_blank"
              class="group p-4 border border-neutral-800 bg-neutral-900/50 hover:border-violet-500/50 hover:bg-violet-500/5 transition-all"
            >
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-medium text-white group-hover:text-violet-400 transition-colors">{project.name}</h3>
                  <p class="text-sm text-neutral-500">{project.desc}</p>
                </div>
                <svg class="size-5 text-neutral-600 group-hover:text-violet-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <div>
        <h2 class="text-sm uppercase tracking-wider text-pink-400 mb-4">Skills</h2>
        <div class="flex flex-wrap gap-2">
          {member.skills.map((skill, i) => {
            const colors = [
              "border-violet-500/30 text-violet-400 bg-violet-500/10",
              "border-fuchsia-500/30 text-fuchsia-400 bg-fuchsia-500/10",
              "border-pink-500/30 text-pink-400 bg-pink-500/10",
            ];
            return (
              <span class={`px-3 py-1.5 text-sm border ${colors[i % colors.length]}`}>
                {skill}
              </span>
            );
          })}
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="p-4 border border-violet-500/20 bg-violet-500/5 text-center">
          <div class="text-3xl font-bold text-violet-400">200k+</div>
          <div class="text-xs text-neutral-500 mt-1">Theme installs</div>
        </div>
        <div class="p-4 border border-fuchsia-500/20 bg-fuchsia-500/5 text-center">
          <div class="text-3xl font-bold text-fuchsia-400">5+</div>
          <div class="text-xs text-neutral-500 mt-1">Years building</div>
        </div>
      </div>
    </div>
  </div>
</SidebarLayout>
