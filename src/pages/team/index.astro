---
import SidebarLayout from "@/layouts/SidebarLayout.astro";
import { teamMembers } from "@/lib/constants/team";
---

<SidebarLayout
  title="Team | Crafter Station"
  description="Meet the team behind Crafter Station."
>
  <div class="max-w-6xl pt-12 lg:pt-0 mx-auto">
    <div class="mb-12">
      <p class="text-sm text-primary font-medium mb-2">Our People</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Builders, dreamers, shippers</h1>
      <p class="text-neutral-400 max-w-2xl">
        Each one brings something unique to the table. Get to know us.
      </p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
      {teamMembers.map((member) => (
        <a href={`/team/${member.username}`} class="group block">
          <div class="aspect-square overflow-hidden border border-neutral-800 group-hover:border-primary/50 transition-colors">
            <img
              src={member.photoUrl}
              alt={member.name}
              class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
              loading="lazy"
            />
          </div>
          <div class="mt-3">
            <p class="font-semibold text-white group-hover:text-primary transition-colors">{member.name}</p>
            <p class="text-sm text-neutral-500">{member.position}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</SidebarLayout>
