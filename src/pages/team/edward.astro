---
import SidebarLayout from "@/layouts/SidebarLayout.astro";
import { teamMembers } from "@/lib/constants/team";
import GithubIcon from "@/icons/github.svg";
import LinkedinIcon from "@/icons/linkedin.svg";

const member = teamMembers.find((m) => m.username === "edward")!;
---

<SidebarLayout
  title={`${member.name} | Crafter Station`}
  description={`${member.name} - ${member.position} at Crafter Station`}
>
  <style>
    .glass {
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
    }
  </style>

  <div class="max-w-5xl pt-12 lg:pt-0 mx-auto relative">
    <div class="absolute top-20 -left-20 w-72 h-72 bg-sky-500/20 rounded-full blur-[100px] -z-10"></div>
    <div class="absolute bottom-20 -right-20 w-72 h-72 bg-blue-500/20 rounded-full blur-[100px] -z-10"></div>

    <a
      href="/team"
      class="inline-flex items-center gap-2 text-sm text-neutral-500 hover:text-white transition-colors mb-12"
    >
      <svg class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to team
    </a>

    <div class="glass border border-white/10 rounded-2xl p-8 mb-8">
      <div class="flex items-center gap-6">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-sky-400 to-blue-600 rounded-xl blur opacity-50"></div>
          <div class="relative w-24 h-24 overflow-hidden rounded-xl border border-white/10">
            <img src={member.photoUrl} alt={member.name} class="w-full h-full object-cover" />
          </div>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-white mb-1">{member.name}</h1>
          <p class="text-sky-400">{member.position}</p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-8">
      <div class="glass border border-white/10 rounded-xl p-6">
        <h2 class="text-sm text-neutral-500 mb-3">About</h2>
        <p class="text-neutral-300 leading-relaxed">
          Frontend Developer enfocado en crear experiencias web modernas y fluidas.
          Siempre explorando nuevas tecnologías y patrones de diseño.
        </p>
      </div>
      <div class="glass border border-white/10 rounded-xl p-6">
        <h2 class="text-sm text-neutral-500 mb-3">Focus</h2>
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 rounded-full bg-sky-400"></div>
            <span class="text-neutral-300">Performance</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 rounded-full bg-blue-400"></div>
            <span class="text-neutral-300">Accessibility</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 rounded-full bg-indigo-400"></div>
            <span class="text-neutral-300">Clean Code</span>
          </div>
        </div>
      </div>
    </div>

    <div class="glass border border-white/10 rounded-xl p-6 mb-8">
      <h2 class="text-sm text-neutral-500 mb-4">Skills</h2>
      <div class="flex flex-wrap gap-2">
        {member.skills.map((skill) => (
          <span class="px-4 py-2 rounded-full glass border border-white/10 text-neutral-300 text-sm hover:bg-sky-500/10 hover:border-sky-500/30 transition-colors">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <div class="flex gap-4">
      {member.github && (
        <a
          href={member.github}
          target="_blank"
          class="flex-1 glass border border-white/10 rounded-xl p-4 text-center hover:bg-sky-500/10 hover:border-sky-500/30 transition-colors group"
        >
          <GithubIcon class="size-5 mx-auto mb-2 text-neutral-500 group-hover:text-sky-400 transition-colors" />
          <span class="text-sm text-neutral-500 group-hover:text-sky-400 transition-colors">GitHub</span>
        </a>
      )}
      {member.linkedin && (
        <a
          href={member.linkedin}
          target="_blank"
          class="flex-1 glass border border-white/10 rounded-xl p-4 text-center hover:bg-blue-500/10 hover:border-blue-500/30 transition-colors group"
        >
          <LinkedinIcon class="size-5 mx-auto mb-2 text-neutral-500 group-hover:text-blue-400 transition-colors" />
          <span class="text-sm text-neutral-500 group-hover:text-blue-400 transition-colors">LinkedIn</span>
        </a>
      )}
    </div>
  </div>
</SidebarLayout>
