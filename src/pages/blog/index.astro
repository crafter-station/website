---
import { getCollection } from "astro:content";
import SidebarLayout from "@/layouts/SidebarLayout.astro";
import FormattedDate from "@/components/FormattedDate.astro";

const posts = await getCollection("blog");
posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPost = posts[0];
const otherPosts = posts.slice(1);
---

<SidebarLayout title="Blog | Crafter Station" description="Articles about open source, developer tools, and building in public.">
  <div class="max-w-5xl min-h-screen pt-8 lg:pt-0 mx-auto">
    <div class="mb-6 md:mb-12">
      <h1 class="text-3xl md:text-5xl font-bold text-white tracking-tight mb-3 md:mb-4">
        Blog
      </h1>
      <p class="text-base md:text-lg text-neutral-400">
        Thoughts on open source, developer tools, and building in public.
      </p>
    </div>

    {featuredPost && (
      <a
        href={`/blog/${featuredPost.id}/`}
        class="group block p-5 md:p-8 border border-neutral-800 hover:border-primary/50 transition-colors mb-4 md:mb-8 bg-gradient-to-br from-neutral-900/50 to-transparent"
      >
        <div class="flex items-center gap-3 mb-3 md:mb-4">
          <span class="px-2 py-1 text-xs font-medium bg-primary/20 text-primary">Latest</span>
          <span class="text-xs md:text-sm text-neutral-600">
            <FormattedDate date={featuredPost.data.pubDate} />
          </span>
        </div>
        <h2 class="text-xl md:text-3xl font-bold text-white group-hover:text-primary transition-colors mb-2 md:mb-3">
          {featuredPost.data.title}
        </h2>
        <p class="text-sm md:text-base text-neutral-400 mb-3 md:mb-4 line-clamp-2">
          {featuredPost.data.description}
        </p>
        <span class="inline-flex items-center gap-2 text-sm text-neutral-500 group-hover:text-primary transition-colors">
          Read article
          <svg class="size-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
          </svg>
        </span>
      </a>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-4">
      {otherPosts.map((post) => (
        <a
          href={`/blog/${post.id}/`}
          class="group block p-4 md:p-6 border border-neutral-800 hover:border-primary/50 transition-colors"
        >
          <div class="text-xs md:text-sm text-neutral-600 mb-2 md:mb-3">
            <FormattedDate date={post.data.pubDate} />
          </div>
          <h2 class="text-base md:text-lg font-semibold text-white group-hover:text-primary transition-colors mb-1 md:mb-2">
            {post.data.title}
          </h2>
          <p class="text-xs md:text-sm text-neutral-500 line-clamp-2">
            {post.data.description}
          </p>
        </a>
      ))}
    </div>
  </div>
</SidebarLayout>
