---
import BaseLayout from "@/layouts/BaseLayout.astro";

interface Talent {
    id: string;
    name: string;
    role: string;
    achievement: string;
    photoUrl?: string;
    linkedin?: string;
    portfolio?: string;
}

const talents: Talent[] = [

    {
        id: "fintech-founder",
        name: "Marcelo Arias",
        role: "Fintech Founder & Engineer",
        achievement:
            "Built a platform helping 20K+ Peruvians improve their personal finances. Combining statistics, engineering, and financial education to create impact.",
        photoUrl: "https://api.dicebear.com/7.x/avataaars/svg?seed=Maria",
        linkedin: "https://www.linkedin.com/in/marcelo-arias/",
        portfolio: "https://marceloarias.com/es",
    },
    {
        id: "ai-researcher",
        name: "Bregy Malpartida",
        role: "AI Researcher",
        achievement:
            "Published multiple papers on machine learning applications in healthcare. Leading research on AI accessibility for underserved communities.",
        photoUrl: "https://api.dicebear.com/7.x/avataaars/svg?seed=Carlos",
        linkedin: "https://www.linkedin.com/in/bregy/",
        portfolio: "https://example.com",
    },
];
---

<BaseLayout
    title="Talents | Crafter Station"
    description="Showcasing exceptional tech professionals from Peru's community."
>
    <div class="max-w-3xl">
        <div class="mb-16">
            <h1
                class="text-[32px] sm:text-4xl font-medium text-foreground tracking-tight mb-3"
            >
                Talents
            </h1>
            <p class="text-[15px] text-foreground/50">
                Showcasing exceptional engineers and creators.
            </p>
        </div>

        {
            talents.length > 0 ? (
                <div class="space-y-12">
                    {talents.map((talent) => (
                        <a href={`/talents/${talent.id}`} class="group block">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-full overflow-hidden flex-shrink-0 bg-muted/50">
                                    {talent.photoUrl ? (
                                        <img
                                            src={talent.photoUrl}
                                            alt={talent.name}
                                            class="w-full h-full object-cover"
                                            loading="lazy"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="18"
                                                height="18"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="text-foreground/20"
                                            >
                                                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" />
                                                <circle cx="12" cy="7" r="4" />
                                            </svg>
                                        </div>
                                    )}
                                </div>
                                <div class="flex-1 min-w-0 pt-0.5">
                                    <div class="flex items-center gap-2 mb-1">
                                        <h3 class="text-[15px] font-medium text-foreground">
                                            {talent.name}
                                        </h3>
                                        <span class="text-foreground/30">
                                            ·
                                        </span>
                                        <p class="text-[13px] text-foreground/40">
                                            {talent.role}
                                        </p>
                                    </div>
                                    <p class="text-[15px] text-foreground/60 leading-relaxed">
                                        {talent.achievement}
                                    </p>
                                    <div class="mt-3 flex items-center gap-3 text-[13px] text-foreground/40">
                                        {talent.linkedin && (
                                            <span class="group-hover:text-foreground/60 transition-colors">
                                                LinkedIn
                                            </span>
                                        )}
                                        {talent.portfolio && (
                                            <span class="group-hover:text-foreground/60 transition-colors">
                                                Portfolio
                                            </span>
                                        )}
                                        <span class="ml-auto group-hover:text-foreground/60 transition-colors">
                                            View profile →
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            ) : (
                <div class="py-24">
                    <p class="text-[15px] text-foreground/40">
                        Interviews coming soon.
                    </p>
                    <a
                        href="https://forms.gle/83MvyWf5J4V6jqGk7"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1.5 text-[13px] text-foreground/50 hover:text-foreground/70 transition-colors mt-4"
                    >
                        Apply to be featured
                        <svg
                            width="12"
                            height="12"
                            viewBox="0 0 15 15"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                d="M8.14645 3.14645C8.34171 2.95118 8.65829 2.95118 8.85355 3.14645L12.8536 7.14645C13.0488 7.34171 13.0488 7.65829 12.8536 7.85355L8.85355 11.8536C8.65829 12.0488 8.34171 12.0488 8.14645 11.8536C7.95118 11.6583 7.95118 11.3417 8.14645 11.1464L11.2929 8H2.5C2.22386 8 2 7.77614 2 7.5C2 7.22386 2.22386 7 2.5 7H11.2929L8.14645 3.85355C7.95118 3.65829 7.95118 3.34171 8.14645 3.14645Z"
                                fill="currentColor"
                                fill-rule="evenodd"
                                clip-rule="evenodd"
                            />
                        </svg>
                    </a>
                </div>
            )
        }
    </div>
</BaseLayout>
