---
import BaseLayout from "../../layouts/BaseLayout.astro";

// Redirect to Google Calendar
const redirectUrl = "https://railly.dev/meet";
---

<BaseLayout
    title="Book a Meeting - Crafter Station"
    description="Schedule a meeting or consultation with Crafter Station team."
>
    <head>
        <!-- Primary Meta Tags -->
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content="Book a Meeting - Crafter Station" />
        <meta
            property="og:description"
            content="Schedule a meeting with Crafter Station team."
        />
        <meta property="og:url" content="https://www.crafter-station.com/cal" />
        <meta property="og:site_name" content="Crafter Station" />

        <!-- Image with multiple size variants -->
        <meta
            property="og:image"
            content="https://www.crafter-station.com/meet-og-image.png"
        />
        <meta
            property="og:image:secure_url"
            content="https://www.crafter-station.com/meet-og-image.png"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:image:type" content="image/png" />
        <meta
            property="og:image:alt"
            content="Book a meeting with Crafter Station"
        />

        <!-- Alternate smaller image for WhatsApp -->
        <meta
            property="og:image"
            content="https://www.crafter-station.com/meet-og-image-small.png"
        />
        <meta property="og:image:width" content="600" />
        <meta property="og:image:height" content="315" />
        <meta property="og:image:type" content="image/png" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="Book a Meeting - Crafter Station" />
        <meta
            name="twitter:description"
            content="Schedule a meeting with Crafter Station team."
        />
        <meta
            name="twitter:image"
            content="https://www.crafter-station.com/meet-og-image.png"
        />

        <!-- LinkedIn -->
        <meta
            property="linkedin:title"
            content="Book a Meeting - Crafter Station"
        />
        <meta
            property="linkedin:description"
            content="Schedule a meeting with Crafter Station team."
        />
        <meta
            property="linkedin:image"
            content="https://www.crafter-station.com/meet-og-image.png"
        />

        <!-- WhatsApp specific - Important -->
        <link
            rel="image_src"
            href="https://www.crafter-station.com/meet-og-image-small.png"
        />

        <!-- Additional Meta -->
        <meta name="theme-color" content="#ffffff" />
        <meta
            name="msapplication-TileImage"
            content="https://www.crafter-station.com/meet-og-image.png"
        />

        <!-- Redirect -->
        <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
    </head>
    <div
        class="prose dark:prose-invert max-w-none w-full text-sm text-foreground/80 font-normal text-pretty leading-loose mx-1 mb-4"
    >
        <p>Redirecting to Google Calendar...</p>
        <p>Please wait while you are being redirected.</p>
        <p>
            If you are not redirected automatically, <a href={redirectUrl}
                >click here</a
            >.
        </p>
    </div>
</BaseLayout>
