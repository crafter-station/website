---
import BaseLayout from "@/layouts/BaseLayout.astro";
import MobileMenu from "@/components/MobileMenu.astro";
import CrafterIcon from "@/icons/crafter.svg";
import GithubIcon from "@/icons/github.svg";
import LinkedinIcon from "@/icons/linkedin.svg";
import XIcon from "@/icons/x.svg";
import { teamMembers } from "@/lib/constants/team";
import { getCollection } from "astro:content";

const projects = [
    { name: "tinte", description: "Theme generator for VSCode & shadcn/ui", href: "https://www.tinte.dev", tags: ["VSCode", "shadcn/ui"], stars: "500+" },
    { name: "lupa", description: "Knowledge Platform for AI Agents", href: "https://www.lupa.build", tags: ["AI", "RAG"], stars: "New" },
    { name: "elements", description: "Fullstack shadcn/ui components", href: "https://www.tryelements.dev/", tags: ["React", "Fullstack"], stars: "200+" },
    { name: "text0", description: "Absurdly smart autocomplete", href: "https://www.text0.dev", tags: ["AI", "Editor"], stars: "Winner" },
];

const posts = await getCollection("blog");
const publishedPosts = posts
    .filter((post) => import.meta.env.DEV || !post.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);
---

<BaseLayout
    title="Crafter Station"
    description="Open source community building developer tools in public. Based in Peru, building for the world."
>
    <div class="min-h-screen w-full flex bg-black">
        <!-- Left Sidebar - Fixed -->
        <aside class="hidden lg:flex flex-col justify-between w-56 p-8 py-12 shrink-0 fixed left-0 top-0 bottom-0">
            <a href="/" class="block p-3 border border-neutral-800 bg-neutral-950 w-fit hover:border-primary/50 transition-colors">
                <CrafterIcon class="size-8 text-primary" />
            </a>

            <nav id="sidebar-nav" class="flex flex-col gap-1 text-sm">
                <a href="#hero" data-section="hero" class="nav-link text-neutral-400 hover:text-white transition-colors py-2 border-l-2 border-transparent hover:border-primary pl-3 -ml-3">Home</a>
                <a href="#about" data-section="about" class="nav-link text-neutral-400 hover:text-white transition-colors py-2 border-l-2 border-transparent hover:border-primary pl-3 -ml-3">About</a>
                <a href="#projects" data-section="projects" class="nav-link text-neutral-400 hover:text-white transition-colors py-2 border-l-2 border-transparent hover:border-primary pl-3 -ml-3">Projects</a>
                <a href="#team" data-section="team" class="nav-link text-neutral-400 hover:text-white transition-colors py-2 border-l-2 border-transparent hover:border-primary pl-3 -ml-3">Team</a>
                <a href="#community" data-section="community" class="nav-link text-neutral-400 hover:text-white transition-colors py-2 border-l-2 border-transparent hover:border-primary pl-3 -ml-3">Community</a>
                <a href="#blog" data-section="blog" class="nav-link text-neutral-400 hover:text-white transition-colors py-2 border-l-2 border-transparent hover:border-primary pl-3 -ml-3">Blog</a>
            </nav>

            <div class="p-4 bg-primary/5 border border-primary/20">
                <p class="text-xs text-primary font-medium mb-1">What's new</p>
                <p class="text-xs text-neutral-400">text0 won the Next.js Hackathon 2025</p>
                <a href="https://text0.dev" target="_blank" class="text-xs text-primary hover:underline mt-2 inline-block">Check it out →</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 w-full">
            <!-- Section: Hero -->
            <section id="hero" class="min-h-screen flex flex-col items-center justify-center px-4 md:px-16 lg:px-24 py-16 pt-24 md:py-24 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent pointer-events-none"></div>

                <div class="relative text-center max-w-5xl">
                    <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-primary/10 border border-primary/20 mb-8">
                        <span class="size-2 bg-primary rounded-full animate-pulse"></span>
                        <span class="text-sm text-primary font-medium">Next.js Hackathon Winners 2025</span>
                    </div>

                    <h1 class="text-7xl md:text-8xl lg:text-[10rem] font-black text-white leading-[0.9] tracking-tighter">
                        CRAFTER
                        <br />
                        <span class="text-primary">STATION</span>
                    </h1>

                    <p class="mt-6 md:mt-8 text-lg md:text-2xl text-neutral-400 max-w-2xl mx-auto leading-relaxed">
                        Open source enthusiasts crafting <span class="text-white">developer tools</span> and
                        growing a <span class="text-white">community of builders</span>
                    </p>

                    <div class="mt-8 md:mt-12 flex flex-wrap justify-center gap-3 md:gap-4">
                        <a href="https://github.com/crafter-station" target="_blank" class="inline-flex items-center gap-2 px-4 md:px-6 py-2.5 md:py-3 bg-white text-black text-sm md:text-base font-semibold hover:bg-primary transition-colors">
                            <GithubIcon class="size-4 md:size-5" />
                            View on GitHub
                        </a>
                        <a href="#projects" class="px-4 md:px-6 py-2.5 md:py-3 border border-neutral-700 text-white text-sm md:text-base font-medium hover:border-primary hover:text-primary transition-colors">
                            Explore Projects
                        </a>
                    </div>
                </div>
            </section>

            <!-- Section: About - Bento Grid -->
            <section id="about" class="px-4 md:px-16 lg:pl-64 lg:pr-28 py-12 md:py-24">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-6xl">
                    <!-- Large Card -->
                    <div class="md:col-span-2 p-8 bg-gradient-to-br from-neutral-900 to-neutral-950 border border-neutral-800 ">
                        <p class="text-sm text-primary font-medium mb-4">Who we are</p>
                        <h2 class="text-3xl md:text-4xl font-bold text-white leading-tight mb-4">
                            A team of builders who believe in the power of community
                        </h2>
                        <p class="text-neutral-400 text-lg leading-relaxed">
                            We're engineers, designers, and creators united by a shared passion: making development better through open source. Every line of code we write is public, every decision is transparent.
                        </p>
                    </div>

                    <!-- Stats Card -->
                    <div class="p-8 bg-neutral-950 border border-neutral-800  flex flex-col justify-between">
                        <p class="text-sm text-neutral-500 mb-4">Impact</p>
                        <div>
                            <p class="text-6xl font-bold text-primary">1K+</p>
                            <p class="text-neutral-400 mt-2">GitHub Stars</p>
                        </div>
                    </div>

                    <!-- Value Card 1 -->
                    <div class="p-6 bg-neutral-950 border border-neutral-800 ">
                        <div class="size-12 bg-primary/10  flex items-center justify-center mb-4">
                            <svg class="size-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-white mb-2">Open by Default</h3>
                        <p class="text-neutral-500 text-sm">All our code is open source. No exceptions.</p>
                    </div>

                    <!-- Value Card 2 -->
                    <div class="p-6 bg-neutral-950 border border-neutral-800 ">
                        <div class="size-12 bg-primary/10  flex items-center justify-center mb-4">
                            <svg class="size-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-white mb-2">Community First</h3>
                        <p class="text-neutral-500 text-sm">Built with feedback from real developers.</p>
                    </div>

                    <!-- Value Card 3 -->
                    <div class="p-6 bg-neutral-950 border border-neutral-800 ">
                        <div class="size-12 bg-primary/10  flex items-center justify-center mb-4">
                            <svg class="size-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-white mb-2">From Peru to the World</h3>
                        <p class="text-neutral-500 text-sm">Based in Lima, building globally.</p>
                    </div>
                </div>
            </section>

            <!-- Section: Projects - Bento -->
            <section id="projects" class="px-4 md:px-16 lg:pl-64 lg:pr-28 py-12 md:py-24 bg-neutral-950/50">
                <div class="max-w-6xl">
                    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-6 md:mb-12">
                        <div>
                            <p class="text-sm text-primary font-medium mb-2">Our Projects</p>
                            <h2 class="text-3xl md:text-5xl font-bold text-white">What we're building</h2>
                        </div>
                        <a href="https://github.com/crafter-station" target="_blank" class="text-neutral-400 hover:text-primary transition-colors flex items-center gap-2">
                            View all on GitHub
                            <svg class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                            </svg>
                        </a>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {projects.map((project, i) => (
                            <a
                                href={project.href}
                                target="_blank"
                                rel="noopener noreferrer"
                                class:list={[
                                    "group relative p-8 border border-neutral-800  transition-all hover:border-primary/50 hover:bg-neutral-900/50 overflow-hidden",
                                    i === 0 && "md:col-span-2 md:flex md:items-center md:justify-between"
                                ]}
                            >
                                <div class={i === 0 ? "md:max-w-xl" : ""}>
                                    <div class="flex items-center gap-3 mb-4">
                                        <span class="px-2 py-1 text-xs font-medium bg-primary/20 text-primary">{project.stars}</span>
                                        {project.tags.map((tag) => (
                                            <span class="text-xs text-neutral-500">{tag}</span>
                                        ))}
                                    </div>
                                    <h3 class="text-2xl md:text-3xl font-bold text-white group-hover:text-primary transition-colors mb-3">
                                        {project.name}
                                    </h3>
                                    <p class="text-neutral-400 text-lg">{project.description}</p>
                                </div>
                                <div class="mt-6 md:mt-0 flex items-center gap-2 text-neutral-500 group-hover:text-primary transition-colors">
                                    <span class="text-sm font-medium">Explore</span>
                                    <svg class="size-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                                    </svg>
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Section: Team -->
            <section id="team" class="px-4 md:px-16 lg:pl-64 lg:pr-28 py-12 md:py-24">
                <div class="max-w-6xl">
                    <div class="mb-6 md:mb-12">
                        <p class="text-sm text-primary font-medium mb-2">The Team</p>
                        <h2 class="text-3xl md:text-5xl font-bold text-white mb-3 md:mb-4">Meet the humans behind the code</h2>
                        <p class="text-neutral-400 max-w-2xl text-sm md:text-base">
                            A small but mighty team passionate about developer experience and open source.
                        </p>
                    </div>

                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 md:gap-6">
                        {teamMembers.map((member) => (
                            <a href={`/team/${member.username}`} class="group block">
                                <div class="aspect-square overflow-hidden border border-neutral-800  group-hover:border-primary/50 transition-colors">
                                    <img
                                        src={member.photoUrl}
                                        alt={member.name}
                                        class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                                    />
                                </div>
                                <div class="mt-3">
                                    <p class="font-semibold text-white group-hover:text-primary transition-colors">{member.name}</p>
                                    <p class="text-sm text-neutral-500">{member.position}</p>
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Section: Community -->
            <section id="community" class="px-4 md:px-16 lg:pl-64 lg:pr-28 py-12 md:py-24 bg-gradient-to-b from-neutral-950 to-black">
                <div class="max-w-6xl">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-6">
                        <!-- Discord Card -->
                        <a href="https://discord.gg/QvsS4jNpKa" target="_blank" class="group p-5 md:p-8 bg-[#5865F2]/10 border border-[#5865F2]/30  hover:border-[#5865F2] transition-colors">
                            <svg class="size-8 md:size-12 text-[#5865F2] mb-3 md:mb-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994.021-.041.001-.09-.041-.106a13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.118.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                            </svg>
                            <h3 class="text-lg md:text-2xl font-bold text-white mb-1 md:mb-2">Join our Discord</h3>
                            <p class="text-neutral-400 text-sm md:text-base mb-3 md:mb-4">Chat with the team, get help, share what you're building.</p>
                            <span class="text-[#5865F2] text-sm md:text-base font-medium group-hover:underline">Join the community →</span>
                        </a>

                        <!-- GitHub Card -->
                        <a href="https://github.com/crafter-station" target="_blank" class="group p-5 md:p-8 bg-neutral-900/50 border border-neutral-800  hover:border-neutral-700 transition-colors">
                            <GithubIcon class="size-8 md:size-12 text-white mb-3 md:mb-6" />
                            <h3 class="text-lg md:text-2xl font-bold text-white mb-1 md:mb-2">Contribute on GitHub</h3>
                            <p class="text-neutral-400 text-sm md:text-base mb-3 md:mb-4">All our projects are open source. PRs and issues welcome!</p>
                            <span class="text-white text-sm md:text-base font-medium group-hover:underline">View repositories →</span>
                        </a>

                        <!-- Twitter/X Card -->
                        <a href="https://x.com/CrafterStation" target="_blank" class="group p-5 md:p-8 bg-neutral-900/50 border border-neutral-800  hover:border-neutral-700 transition-colors">
                            <XIcon class="size-8 md:size-12 text-white mb-3 md:mb-6" />
                            <h3 class="text-lg md:text-2xl font-bold text-white mb-1 md:mb-2">Follow on X</h3>
                            <p class="text-neutral-400 text-sm md:text-base mb-3 md:mb-4">Updates, announcements, and building in public threads.</p>
                            <span class="text-white text-sm md:text-base font-medium group-hover:underline">@CrafterStation →</span>
                        </a>

                        <!-- Blog Card -->
                        <a href="/blog" class="group p-5 md:p-8 bg-primary/10 border border-primary/30  hover:border-primary transition-colors">
                            <svg class="size-8 md:size-12 text-primary mb-3 md:mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                            </svg>
                            <h3 class="text-lg md:text-2xl font-bold text-white mb-1 md:mb-2">Read our Blog</h3>
                            <p class="text-neutral-400 text-sm md:text-base mb-3 md:mb-4">Deep dives, tutorials, and behind-the-scenes content.</p>
                            <span class="text-primary text-sm md:text-base font-medium group-hover:underline">Read articles →</span>
                        </a>
                    </div>
                </div>
            </section>

            <!-- Section: Blog -->
            <section id="blog" class="px-4 md:px-16 lg:pl-64 lg:pr-28 py-12 md:py-24">
                <div class="max-w-6xl">
                    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-6 md:mb-12">
                        <div>
                            <p class="text-sm text-primary font-medium mb-2">From the Blog</p>
                            <h2 class="text-3xl md:text-5xl font-bold text-white">Latest articles</h2>
                        </div>
                        <a href="/blog" class="text-neutral-400 hover:text-primary transition-colors flex items-center gap-2">
                            View all posts
                            <svg class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                            </svg>
                        </a>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-3 md:gap-6">
                        {publishedPosts.map((post, i) => (
                            <a
                                href={`/blog/${post.id}/`}
                                class:list={[
                                    "group relative p-6 border border-neutral-800  transition-all hover:border-primary/50 hover:bg-neutral-900/50",
                                    i === 0 && "md:col-span-2 md:row-span-2 md:p-8"
                                ]}
                            >
                                <div class="flex flex-col h-full">
                                    <time class="text-sm text-neutral-500 mb-3">
                                        {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                                    </time>
                                    <h3 class:list={[
                                        "font-bold text-white group-hover:text-primary transition-colors mb-3",
                                        i === 0 ? "text-2xl md:text-3xl" : "text-xl"
                                    ]}>
                                        {post.data.title}
                                    </h3>
                                    <p class:list={[
                                        "text-neutral-400 flex-1",
                                        i === 0 ? "text-lg" : "text-sm line-clamp-2"
                                    ]}>
                                        {post.data.description}
                                    </p>
                                    <div class="mt-4 flex items-center gap-2 text-neutral-500 group-hover:text-primary transition-colors">
                                        <span class="text-sm font-medium">Read article</span>
                                        <svg class="size-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                                        </svg>
                                    </div>
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Footer -->
            <footer class="px-4 md:px-16 lg:pl-64 lg:pr-28 py-8 md:py-12 bg-gradient-to-t from-neutral-950 to-transparent">
                <div class="max-w-6xl">
                    <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
                        <div class="flex flex-col md:flex-row md:items-center gap-4 md:gap-8">
                            <div class="flex items-center gap-3">
                                <CrafterIcon class="size-5 text-primary" />
                                <span class="text-sm text-white font-medium">Crafter Station</span>
                            </div>
                            <span class="hidden md:block text-neutral-700">|</span>
                            <span class="text-xs md:text-sm text-neutral-500">Lima, Peru</span>
                        </div>
                        <div class="flex items-center justify-between md:justify-end gap-4 md:gap-6">
                            <div class="flex items-center gap-3 md:hidden">
                                <a href="https://github.com/crafter-station" target="_blank" class="text-neutral-500 hover:text-white transition-colors">
                                    <GithubIcon class="size-4" />
                                </a>
                                <a href="https://x.com/CrafterStation" target="_blank" class="text-neutral-500 hover:text-white transition-colors">
                                    <XIcon class="size-4" />
                                </a>
                                <a href="https://linkedin.com/company/crafter-station" target="_blank" class="text-neutral-500 hover:text-white transition-colors">
                                    <LinkedinIcon class="size-4" />
                                </a>
